<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9DFF98"
        tools:context=".MainActivity" android:orientation="vertical" android:gravity="center">

    <Button
            android:text="PLAY"
            android:background="@drawable/bplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bPlay"
            android:onClick="bPlay"
            android:textSize="24sp"

    />

</LinearLayout>